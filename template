<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Redirecting…</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <!-- Replace G-XXXXXXXXXX with your GA Measurement ID -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX', { 'send_page_view': true });
  </script>
  <style>
    body{font-family:Segoe UI,Roboto,Arial;margin:40px;background:#f8fafc;color:#0f172a}
    .box{max-width:720px;margin:40px auto;padding:20px;background:#fff;border-radius:8px;border:1px solid #e6eef6}
    a.btn{display:inline-block;padding:10px 14px;background:#2563eb;color:white;border-radius:6px;text-decoration:none}
    small{color:#475569}
  </style>
</head>
<body>
  <div class="box">
    <h2>Hang on — redirecting you…</h2>
    <p>We’re preparing the page. If you are not redirected automatically, click below.</p>

    <!-- REPLACE DEST_URL with your final external URL (include UTM parameters if you want) -->
    <p><a id="goLink" class="btn" href="DEST_URL">Continue</a></p>

    <p><small>This redirect URL is permanent — you can use it inside a QR code.</small></p>
  </div>

  <script>
    // Destination URL is embedded directly in the link above.
    const DEST = document.getElementById('goLink').href;

    // Send an explicit event to GA (optional) before redirecting
    try {
      // send event; GA will also record a page_view automatically, important change the 'event_lavel': DEST to 'event_label': give unique name
      gtag('event', 'qr_redirect', { 'event_label': DEST, 'event_category': 'QR', 'qr_destination': DEST });
    } catch(e){ /* ignore if gtag not ready */ }

    // Wait a short time to give GA a moment to send data, then redirect
    // 600-900ms is usually enough; increase if you want more safety.
    const REDIRECT_DELAY_MS = 100;
    setTimeout(function(){ window.location.replace(DEST); }, REDIRECT_DELAY_MS);
  </script>

  <noscript>
    <!-- fallback for users with JS disabled; this will not be counted by GA -->
    <meta http-equiv="refresh" content="0; url=DEST_URL">
  </noscript>
</body>
</html>
